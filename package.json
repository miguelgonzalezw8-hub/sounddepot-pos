{
  "name": "volterahq-pos-desktop",
  "private": true,
  "version": "0.0.1",
  "main": "electron/main.cjs",
  "scripts": {
    "client:dev": "npm --prefix client run dev",
    "client:build": "npm --prefix client run build -- --emptyOutDir",
    "client:preview": "npm --prefix client run preview",
    "electron:dev": "concurrently -k \"npm run client:dev\" \"wait-on -t 60000 http-get://localhost:5173 && electron .\"",
    "electron:build": "set NODE_OPTIONS=--max-old-space-size=8192 && npm run client:build && electron-builder"
  },
  "dependencies": {
    "csv-parser": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "wait-on": "^9.0.4"
  },
"build": {
  "appId": "com.volterahq.pos",
  "productName": "VolteraHQ",
  "executableName": "VolteraHQ",
  "artifactName": "${productName} Setup ${version}.${ext}",

  "directories": {
    "output": "release2"
  },

  "files": [
    "electron/**/*",
    "client/dist/**/*",
    "package.json"
  ],

  "extraResources": [
    { "from": "electron/splash.html", "to": "splash.html" },
    { "from": "electron/assets", "to": "assets" }
  ],

  "win": {
    "target": "nsis",
    "icon": "electron/assets/icon.ico",
    "signAndEditExecutable": true
  },

  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "electron/assets/icon.ico",
    "uninstallerIcon": "electron/assets/icon.ico",
    "shortcutName": "VolteraHQ"
  }
}

}
